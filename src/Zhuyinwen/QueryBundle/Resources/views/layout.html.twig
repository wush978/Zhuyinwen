<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <script src="{{ asset('bundles/zhuyinwenquery/js/jquery-1.8.0.min.js') }}"></script>
        <link rel="stylesheet" href="{{ asset('bundles/zhuyinwenquery/css/demo.css') }}" type="text/css" media="all" />
        <title>{% block title %}Demo Bundle{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="symfony-wrapper">
            <div id="symfony-header">
				<script>
					function zhuyinwenQuery() {
						var result = $('#zhuyinwen-query-result')[0];
						result.innerHTML = '';
						var q = $('#zhuyinwen-query')[0].value;
						var url = $('#zhuyinwen_query').attr("action");
						$.post(url,{
							query:q
						}, function(data) {
							if (data.responseCode == 400) {
								alert(data.message);
							}
							else {
								result.innerHTML = data.message;
							}
						});
					} 
				</script>            
                <a href="{{ path('_welcome') }}">
                    <img src="{{ asset('bundles/zhuyinwenquery/images/logo.png') }}" alt="Symfony" width="200" height="150">
                </a>
				<form id="zhuyinwen_query" method="" action="{{ path('_query') }}">
					<label for="symfony-search-field"><span>請輸入要查詢的注音文</span></label>
					<input name="q" id="zhuyinwen-query" type="search" placeholder="" class="medium_txt">
					<img src="{{ asset('bundles/acmedemo/images/search.png') }}" onclick="zhuyinwenQuery()" />
				</form>                
{#                 <form id="symfony-search" method="GET" action="http://symfony.com/search">#}
{#                     <label for="symfony-search-field"><span>Search on Symfony Website</span></label>#}
{#                     <input name="q" id="symfony-search-field" type="search" placeholder="Search on Symfony website" class="medium_txt">#}
{#                     <input type="submit" class="symfony-button-grey" value="OK" />#}
{#                 </form>#}
            </div>

            {% if app.session.flash('notice') %}
                <div class="flash-message">
                    <em>Notice</em>: {{ app.session.flash('notice') }}
                </div>
            {% endif %}

            {% block content_header %}
                <ul id="menu">
                    {% block content_header_more %}
                        <li><a href="{{ path('_demo') }}">Demo Home</a></li>
                    {% endblock %}
                </ul>

                <div style="clear: both"></div>
            {% endblock %}

            <div class="symfony-content">
                {% block content %}
                {% endblock %}
            </div>

            {% if code is defined %}
                <h2>Code behind this page</h2>
                <div class="symfony-content">{{ code|raw }}</div>
            {% endif %}
        </div>
    </body>
</html>
